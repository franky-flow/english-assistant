# English Assistant Production Environment Configuration

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Database Configuration (Production)
DATABASE_URL=postgresql://english_assistant_user:CHANGE_THIS_PASSWORD@localhost:5432/english_assistant
DB_HOST=localhost
DB_PORT=5432
DB_NAME=english_assistant
DB_USER=english_assistant_user
DB_PASSWORD=CHANGE_THIS_PASSWORD

# Model Configuration
MODELS_CACHE_DIR=/opt/english-assistant/models_cache
HF_HOME=/opt/english-assistant/models_cache
TRANSFORMERS_CACHE=/opt/english-assistant/models_cache

# Security (CHANGE THESE IN PRODUCTION)
SECRET_KEY=CHANGE_THIS_SECRET_KEY_IN_PRODUCTION
CORS_ORIGINS=http://localhost,https://your-domain.com

# Logging
LOG_LEVEL=WARNING
LOG_FILE=/opt/english-assistant/logs/english_assistant.log

# Production Features
RELOAD_ON_CHANGE=false
DEBUG_MODE=false
PRELOAD_MODELS=true

# Performance
MAX_WORKERS=4
TIMEOUT_SECONDS=60

# SSL/TLS (if using HTTPS)
SSL_CERT_PATH=/path/to/certificate.crt
SSL_KEY_PATH=/path/to/private.key

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60