{
  "development": {
    "backend": {
      "host": "localhost",
      "port": 8000,
      "reload": true,
      "log_level": "info",
      "workers": 1
    },
    "frontend": {
      "host": "localhost", 
      "port": 3000,
      "auto_reload": true,
      "cors_enabled": true
    },
    "database": {
      "host": "localhost",
      "port": 5432,
      "name": "english_assistant_dev",
      "user": "english_assistant_user",
      "password": "dev_password"
    },
    "models": {
      "cache_dir": "./models_cache",
      "preload": false,
      "cpu_only": true
    }
  },
  "testing": {
    "backend": {
      "host": "localhost",
      "port": 8001,
      "reload": false,
      "log_level": "warning"
    },
    "frontend": {
      "host": "localhost",
      "port": 3001
    },
    "database": {
