    }
  },
  "scripts": {
    "dev": "python dev.py both",
    "dev:backend": "python dev.py backend", 
    "dev:frontend": "python dev.py frontend",
    "test": "python -m pytest backend/tests/",
    "lint": "flake8 backend/ && eslint frontend/js/",
    "format": "black backend/ && prettier --write frontend/js/",
    "build:css": "cd frontend && npm run build",
    "build:dev": "cd frontend && npm run dev"
  },
  "urls": {
    "frontend": "http://localhost:3000",
    "backend": "http://localhost:8000", 
    "api_docs": "http://localhost:8000/docs",
    "health": "http://localhost:8000/health"
